<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/frag_event_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabLayoutHeight"
        app:tabIndicatorColor="@color/colorDivider"
        app:tabIndicatorHeight="@dimen/tabIndicatorHeight"
        app:tabTextColor="@color/colorSecondTitleText"
        app:tabSelectedTextColor="@color/colorTitleText"
        android:background="@color/colorPrimary" />

    <com.alphagao.done365.widget.MyViewPager
        android:id="@+id/frag_event_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
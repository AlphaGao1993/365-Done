<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:minHeight="80dp"
    android:background="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/proIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_project"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/contentName"
        android:layout_toEndOf="@id/proIcon"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="毕业设计"
        android:maxLines="1"
        android:textSize="18sp"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:layout_centerVertical="true"/>

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:minHeight="60dp"
        app:donut_finished_stroke_width="5dp"
        app:donut_unfinished_stroke_width="5dp"
        app:donut_circle_starting_degree="-90"
        app:donut_progress="20"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:donut_text_size="15sp"
        app:donut_finished_color="@color/colorAccent"
        app:donut_unfinished_color="@color/colorTreeDivider"
        android:layout_marginEnd="5dp"/>
    <ImageView
        android:id="@+id/projectChecked"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>
</RelativeLayout>
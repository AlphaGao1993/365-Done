<?xml version="1.0" encoding="utf-8"?>
<com.alphagao.done365.widget.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inbox_menu_to_agenda"
            style="@style/inbox_swipe_menu"
            android:background="@color/colorDivider"
            android:text="日程" />

        <TextView
            android:id="@+id/inbox_menu_to_todo"
            style="@style/inbox_swipe_menu"
            android:background="@color/colorAccent"
            android:text="待办" />

        <TextView
            android:id="@+id/inbox_menu_to_memo"
            style="@style/inbox_swipe_menu"
            android:background="@color/colorPrimary"
            android:text="备忘" />

        <TextView
            android:id="@+id/inbox_menu_to_trash"
            style="@style/inbox_swipe_menu"
            android:background="@color/inbox_swipe_delete_color"
            android:text="删除" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightBackground">

        <RelativeLayout
            android:id="@+id/inbox_item_layout"
            style="@style/clickableLayoutTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/inbox_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="duidhsdhs"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/inbox_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/inbox_item_content"
                android:layout_marginTop="10dp"
                android:text="dsdsfsfsf"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorTreeDivider" />
        </RelativeLayout>
    </FrameLayout>
</com.alphagao.done365.widget.SwipeItemLayout>